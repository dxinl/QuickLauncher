<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:background="@drawable/bkg_ic_list">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ic_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/ic_list_item_margin"
        android:paddingTop="@dimen/ic_list_item_margin"
        android:visibility="gone"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_list"
        android:layout_margin="@dimen/trigger_margin"
        app:cardBackgroundColor="@android:color/white">

        <ImageView
            android:id="@+id/touch_trigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/trigger_margin"
            android:src="@mipmap/quick_launcher"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>